<div class="col-md-4 col-md-offset-4 body">
  <h2>编辑商品</h2>
  <hr>
    <%= simple_form_for [:admin,@product] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :quantity %>
      <%= f.input :price %>
      <% if @product.photos.present? %>
      <span>目前商品图片</span>
      <% @product.photos.each do |p| %>
      <%= image_tag p.avatar.thumb.url %>
      <% end %>
      <% end %>
      <%= f.label :avatar,label:"上传多张图片" %>
      <%= f.file_field :avatar, :multiple => true, name:"photos[avatar][]" %>
      <%= f.input :is_hidden %>
      <%= f.submit "提交商品" %>
    <% end %>
</div>
