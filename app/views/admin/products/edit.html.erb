<div class="col-md-4 col-md-offset-4">
  <h2>编辑商品</h2>
  <hr>
    <%= simple_form_for [:admin,@product] do |f| %>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :quantity %>
      <%= f.input :price %>
      <% if @product.image.present? %>
      <span>目前商品图片</span>
      <%= image_tag(@product.image.thumb.url) %>
      <% end %>
      <%= f.input :image, as: :file %>
      <%= f.input :is_hidden %>
      <%= f.submit "提交商品" %>
    <% end %>
</div>
