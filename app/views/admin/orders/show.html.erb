<div class="row body">
  <div class="container">
  <div class="col-md-12">
    <h2 class="text-center">订单明细(<%= render_order_paid_state(@order) %>) </h2>
    <%= render "admin/orders/state_option", order: @order %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品详情</td>
          <td>单价</td>
          <td>数量</td>
          <td>金额</td>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.quantity %></td>
          <td><%= product_list.product_price*product_list.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-2 col-md-offset-10">
    <h4 class="total pull-right">
    总计：<%= @order.total %>RMB
    </h4>
    </div>
    <hr>

    <h2 class="text-center">寄送资讯</h2>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td colspan="2">订购信息</td>
          <td colspan="2">收货信息</td>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= @order.billing_name %>
          </td>
          <td>
            <%= @order.billing_address %>
          </td>
          <td>
            <%= @order.shipping_name %>
          </td>
          <td>
            <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>
</div>
</div>
