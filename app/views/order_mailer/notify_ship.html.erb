<div class="row">
  <div class="container">
  <div class="col-md-12">
    <h2 class="text-center">订单发货</h2>
    <small><%= link_to("订单链接",order_url(@order.token)) %></small>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品详情</td>
          <td>单价</td>
          <td>数量</td>
          <td>金额</td>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.quantity %></td>
          <td><%= product_list.product_price*product_list.quantity %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-2 col-md-offset-10">
    <h4 class="total pull-right">
    总计：<%= @order.total %>RMB
    </h4>
    </div>
    <hr>

    <h2 class="text-center">寄送资讯</h2>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            订购人
          </td>
          </tr>
          <tr>
          <td>
            <%= @order.billing_name %>
            -
            <%= @order.billing_address %>
          </td>
          </tr>
          <tr>
          <td>
            收货人
          </td>
          </tr>
          <tr>
          <td>
            <%= @order.shipping_name %>
            -
            <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
</div>
