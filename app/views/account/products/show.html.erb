<div class="container">
<div class="row">
  <div class="col-md-6">
    <% if @product.photos.present? %>
    <% @product.photos.each_with_index do |p,index| %>
    <% if index == 0 %>
    <%= image_tag p.avatar.medium.url %>
    <div style="letter-spacing: -8px">
    <% else %>
    <%= image_tag p.avatar.thumb.url %>
    <% end %>
    <% end %>
    </div>
    <% else %>
    <%= image_tag("http://placehold.it/400x400&text = No Pic",class:"thumbnail") %>
    <% end %>
  </div>
</div>
<div class="col-md-6">
  <h2><%= @product.title %></h2>
  <p><%= simple_format(@product.description)%></p>
  <% if @product.quantity > 0 %>
  数量：<%= @product.quantity %>
  <br>¥<%= @product.price %>
  <%= link_to("加入购物车",add_to_cart_account_product_path(@product),method: :post,class:"btn btn-primary pull-right") %>
  <% else %>
  <h3 class="pink pull-right">已售空</h3>
  <% end %>

</div>
</div>
